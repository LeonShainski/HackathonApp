<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txtActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnProductivity"
        android:layout_width="392dp"
        android:layout_height="160dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#00000000"
        app:layout_constraintBottom_toTopOf="@+id/btnPhysicalWellness"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="175dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="User Name"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPhysicalWellness"
        android:layout_width="392dp"
        android:layout_height="160dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#00000000"
        app:layout_constraintBottom_toTopOf="@+id/btnMentalWellness"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnMentalWellness"
        android:layout_width="392dp"
        android:layout_height="160dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#00000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/personLevel"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/progress_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:progress="0" />

    <TextView
        android:id="@+id/txtProductivityTitle"
        android:layout_width="149dp"
        android:layout_height="33dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:text="Productivity"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnProductivity" />

    <TextView
        android:id="@+id/txtPhysicalWellness"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:text="Physical Wellness"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnPhysicalWellness" />

    <TextView
        android:id="@+id/txtMentalWellness"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:text="Mental Wellness"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnMentalWellness" />

    <TextView
        android:id="@+id/txtProductivityView"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="View Tasks >"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnProductivity" />

    <TextView
        android:id="@+id/txtActivityView"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="View Tasks >"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnPhysicalWellness" />

    <TextView
        android:id="@+id/txtSpiritualView"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="View Tasks >"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnMentalWellness" />


    <ProgressBar
        android:id="@+id/prgProductivityProgress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="353dp"
        android:layout_height="66dp"
        android:layout_marginBottom="16dp"
        android:background="#070707"
        android:clickable="false"
        android:progress="0"
        app:layout_constraintBottom_toBottomOf="@+id/btnProductivity"
        app:layout_constraintEnd_toEndOf="@+id/btnProductivity"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="@+id/btnProductivity" />

    <ProgressBar
        android:id="@+id/prgPhysicalProgress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="353dp"
        android:layout_height="66dp"
        android:layout_marginBottom="16dp"
        android:background="#070707"
        android:clickable="false"
        android:progress="0"
        app:layout_constraintBottom_toBottomOf="@+id/btnPhysicalWellness"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/prgMentalProgress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="353dp"
        android:layout_height="66dp"
        android:layout_marginBottom="16dp"
        android:background="#070707"
        android:clickable="false"
        android:progress="0"
        app:layout_constraintBottom_toBottomOf="@+id/btnMentalWellness"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btnMentalWellness" />

    <!--<EditText
        android:id="@+id/txtEnterNameBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_editor_absoluteX="12dp" />

    <Button
        android:id="@+id/btnAddName"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Add"
        app:layout_constraintTop_toBottomOf="@+id/txtEnterNameBox"
        tools:layout_editor_absoluteX="13dp" />-->



</androidx.constraintlayout.widget.ConstraintLayout>