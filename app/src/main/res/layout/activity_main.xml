<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txtActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnProductivity"
        android:layout_width="392dp"
        android:layout_height="160dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#00000000"
        app:layout_constraintBottom_toTopOf="@+id/btnPhysicalWellness"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="34dp"
        android:layout_height="23dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Hey, "
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPhysicalWellness"
        android:layout_width="392dp"
        android:layout_height="160dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#00000000"
        app:layout_constraintBottom_toTopOf="@+id/btnMentalWellness"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnMentalWellness"
        android:layout_width="392dp"
        android:layout_height="160dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#00000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/personLevel"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/progress_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:progress="0" />

    <TextView
        android:id="@+id/txtProductivityTitle"
        android:layout_width="149dp"
        android:layout_height="33dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:text="Productivity"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnProductivity" />

    <TextView
        android:id="@+id/txtPhysicalWellness"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:text="Physical Wellness"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnPhysicalWellness" />

    <TextView
        android:id="@+id/txtMentalWellness"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:text="Mental Wellness"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnMentalWellness" />

    <TextView
        android:id="@+id/txtProductivityView"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="View Tasks >"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnProductivity" />

    <TextView
        android:id="@+id/txtActivityView"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="View Tasks >"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnPhysicalWellness" />

    <TextView
        android:id="@+id/txtSpiritualView"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="View Tasks >"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnMentalWellness" />


    <ProgressBar
        android:id="@+id/prgProductivityProgress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="353dp"
        android:layout_height="66dp"
        android:layout_marginBottom="16dp"
        android:background="#070707"
        android:clickable="false"
        android:progress="0"
        app:layout_constraintBottom_toBottomOf="@+id/btnProductivity"
        app:layout_constraintEnd_toEndOf="@+id/btnProductivity"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="@+id/btnProductivity" />

    <ProgressBar
        android:id="@+id/prgPhysicalProgress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="353dp"
        android:layout_height="66dp"
        android:layout_marginBottom="16dp"
        android:background="#070707"
        android:clickable="false"
        android:progress="0"
        app:layout_constraintBottom_toBottomOf="@+id/btnPhysicalWellness"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/prgMentalProgress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="353dp"
        android:layout_height="66dp"
        android:layout_marginBottom="16dp"
        android:background="#070707"
        android:clickable="false"
        android:progress="0"
        app:layout_constraintBottom_toBottomOf="@+id/btnMentalWellness"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btnMentalWellness" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:text="Progress"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/prgPhysicalProgress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPhysicalWellness"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:text="Progress"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/prgProductivityProgress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtProductivityTitle"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:text="Progress"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/prgMentalProgress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMentalWellness" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Level"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/personLevel"
        app:layout_constraintEnd_toEndOf="@+id/personLevel"
        app:layout_constraintStart_toStartOf="@+id/personLevel"
        app:layout_constraintTop_toTopOf="@+id/personLevel" />

    <TextView
        android:id="@+id/txtLevelDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4CAF50"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/personLevel"
        app:layout_constraintEnd_toEndOf="@+id/personLevel"
        app:layout_constraintStart_toStartOf="@+id/personLevel"
        app:layout_constraintTop_toTopOf="@+id/personLevel" />

    <EditText
        android:id="@+id/txtUserName"
        android:layout_width="118dp"
        android:layout_height="22dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:background="@null"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.033" />

    <Button
        android:id="@+id/btnAddTasksMain"
        android:layout_width="123dp"
        android:layout_height="46dp"
        android:layout_marginBottom="16dp"
        android:text="Add Tasks"
        app:layout_constraintBottom_toTopOf="@+id/btnProductivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtFriendlyGreetingMain"
        android:layout_width="205dp"
        android:layout_height="64dp"
        android:text="Let me know how you're doing :)"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.003" />


    <!--<EditText
        android:id="@+id/txtEnterNameBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_editor_absoluteX="12dp" />

    <Button
        android:id="@+id/btnAddName"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Add"
        app:layout_constraintTop_toBottomOf="@+id/txtEnterNameBox"
        tools:layout_editor_absoluteX="13dp" />-->


</androidx.constraintlayout.widget.ConstraintLayout>