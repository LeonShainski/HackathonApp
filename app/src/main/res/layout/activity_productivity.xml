<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Productivity"
    android:background="@drawable/shooting_star">

    <TextView
        android:id="@+id/txtProductivityTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Productivity"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/chkProductivity1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:password="false"
        android:text="Finish Lab report"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textIsSelectable="false"
        android:textSize="30dp"
        app:buttonTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtProductivityTab" />

    <CheckBox
        android:id="@+id/chkProductivity2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:text="Write quiz"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        app:buttonTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chkProductivity1" />

    <CheckBox
        android:id="@+id/chkProductivity3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:text="Study for test"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        app:buttonTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chkProductivity2" />

    <CheckBox
        android:id="@+id/chkProductivity4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:text="Clean room"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        app:buttonTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chkProductivity3" />

    <TextView
        android:id="@+id/txtProductivityBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="+25"
        android:textColor="#4CAF50"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/chkProductivity1"
        app:layout_constraintEnd_toEndOf="@+id/chkProductivity1"
        app:layout_constraintTop_toTopOf="@+id/chkProductivity1" />

    <TextView
        android:id="@+id/txtProductivityBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="+25"
        android:textColor="#4CAF50"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/chkProductivity2"
        app:layout_constraintEnd_toEndOf="@+id/chkProductivity2"
        app:layout_constraintTop_toTopOf="@+id/chkProductivity2" />

    <TextView
        android:id="@+id/txtProductivityBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="+25"
        android:textColor="#4CAF50"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/chkProductivity3"
        app:layout_constraintEnd_toEndOf="@+id/chkProductivity3"
        app:layout_constraintTop_toTopOf="@+id/chkProductivity3" />

    <TextView
        android:id="@+id/txtProductivityBox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="+25"
        android:textColor="#4CAF50"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/chkProductivity4"
        app:layout_constraintEnd_toEndOf="@+id/chkProductivity4"
        app:layout_constraintTop_toTopOf="@+id/chkProductivity4" />

    <Button
        android:id="@+id/btnProductivityFinished"
        android:layout_width="162dp"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:text="Finished"
        android:textAllCaps="false"
        app:backgroundTint="#2596BE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>